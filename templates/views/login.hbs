<html>
<head>
{{>header}}
<title>Login Page</title>

<style>
.h1
{
    color:red;
}

*
{
    padding:0;
    margin:0;
}

.login_form{
    padding: 30px 40px;
    
}

.login_form .font1{
    font-size:20px;
    color:blue;
}
.login_form .font2{
    font-size:20px;
    color:blue;
}
.login_form input
{
    height:40px;
    width:300px;
    padding:0 5px;
    font-size:20px;
    border:2px solid silver;
}
.login_form button{
    text-align:center;
    padding:10px 10px;
    font-size:15px;
    size:50px;
    color:blue;
    position:center;
    border-radius:10px;
    font-weight:bold;
    margin:auto;
    cursor: pointer;
}

.login_form #name_error,
.login_form #pass_error{
    
    margin-top:5px;
    width:300px;
    font-size:15px;
    color:red;
    background: rgba(245, 0, 0, 0.367);
    text-align:center;
    padding: 5px 8px;
    border-radius: 3px;
    border:1px solid #EF9A9A;
    display: none;
}

input[type=text]:focus, input[type=password]:focus {
  background-color: #ddd;
  outline: none;
}

</style>

</head>
<body>
    {{>navbar}}
    <div class="container">
        
        <form class="login_form" action="/login" 
        method="POST" autocomplete="off" name="form" 
        onsubmit="return validated()">
           <div class="font1">Username</div>
           <input type="text" name="username"><br><br>
           <div id="name_error">Please fill up your username!</div>
           <div class="font2">Password</div>
           <input type="password" name="password"><br><br>
           <div id="pass_error">Please fill up your password!</div>
    
    <br><br>
    <button type="submit" onclick=" ">Login</button>
</form>
</div>

<script>
var username=document.forms['form']['username'];
var password=document.forms['form']['password'];
var name_error=document.getElementById('name_error')
var pass_error=document.getElementById('pass_error')
username.addEventListener('textInput',username_verify);
password.addEventListener('textInput',password_verify);
function validated(){
    if(username.value.length < 2)
    {
        username.style.border="1px solid red";
        name_error.style.display="block";
        username.focus();
        return false;
    }
    if(password.value.length < 2)
    {
        password.style.border="1px solid red";
        pass_error.style.display="block";
        password.focus();
        return false;
    }
}
function username_verify()
{
    if(username.value.length >=2){
        username.style.border="1px solid silver";
        name_error.style.display="none";
        return true;
    }
}
function password_verify()
{
    if(password.value.length >=2){
        password.style.border="1px solid silver";
        pass_error.style.display="none";
        return true;
    }
}
</script>

</body>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+08RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAis6JXm" crossorigin="anonymous"
    <link rel="stylesheet" href="css/style.css">
</html>